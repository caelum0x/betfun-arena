{
  "name": "@betfun/anchor",
  "version": "0.1.0",
  "description": "BetFun Arena Anchor Smart Contracts",
  "private": true,
  "scripts": {
    "test": "anchor test",
    "build": "export PATH=\"$HOME/.local/share/solana/install/active_release/bin:$PATH\" && anchor build",
    "deploy:devnet": "export PATH=\"$HOME/.local/share/solana/install/active_release/bin:$PATH\" && anchor deploy --provider.cluster devnet",
    "deploy:mainnet": "export PATH=\"$HOME/.local/share/solana/install/active_release/bin:$PATH\" && anchor deploy --provider.cluster mainnet",
    "idl:generate": "anchor idl parse --file programs/betfun/src/lib.rs > target/idl/betfun.json"
  },
  "dependencies": {
    "@coral-xyz/anchor": "0.32.1",
    "@solana/web3.js": "^1.95.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "typescript": "5.9.2",
    "ts-mocha": "^10.0.0",
    "chai": "^4.3.10",
    "mocha": "^10.0.0"
  }
}

